@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <h2 class="text-center mb-4" style="color:#800000">Kayıt Ol</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Account" asp-action="Register" method="post">
                <div class="form-group mb-3">
                    <label for="Username">Kullanıcı Adı</label>
                    <input type="text" id="Username" name="Username" class="form-control" placeholder="Kullanıcı adınızı giriniz. Örn:soft06" required />
                </div>
                <div class="form-group mb-3">
                    <label for="Email">Email</label>
                    <input type="email" id="Email" name="Email" class="form-control" placeholder="Email adresinizi giriniz. Örn:soft06@examle.com" required />
                </div>
                <div class="form-group mb-3">
                    <label for="Password">Şifre</label>
                    <input type="password" id="Password" name="Password" class="form-control" placeholder="Şifrenizi giriniz." required />
                </div>
                <button type="submit" class="btn btn-login w-100">Register</button>
            </form>
            <div class="mt-3 text-center">
                <a asp-controller="Account" asp-action="Login" style="color:#800000">Hesabınız var mı? Giriş yapın!</a>
            </div>
        </div>
    </div>
</div>
