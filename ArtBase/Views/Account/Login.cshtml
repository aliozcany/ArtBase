@{
    Layout = null;
    ViewData["Title"] = "Login";
}
@model ArtBase.Models.LoginViewModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - ArtBase</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        html, body {
            background-color: #eee;
            height: 100%;
        }
        .login-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .center-image {
            max-width: 200px;
            margin-bottom: 2rem;
        }
        .btn-login {
            background-color: #800000;
            color: white;
            margin-top:20px;
        }
        .btn-login:hover {
            background-color: #800000;
            color: white;
        }

        .form-title {
            color: #800000;
            margin-bottom: 2rem;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <div class="text-center mb-4">
                        <img src="~/images/soft06_logo.png" alt="soft06 logo" class="center-image" />
                    </div>
                    <h2 class="text-center form-title">Giriş yap</h2>
                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label for="Email">Email</label>
                            <input type="email" id="Email" name="Email" class="form-control" value="@Model?.Email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="Password">Şifre</label>
                            <input type="password" id="Password" name="Password" class="form-control" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-login w-100">Oturum Aç</button>
                    </form>
                    <div class="mt-3 text-center">
                        <a asp-controller="Account" asp-action="Register" class="text-muted">Daha hesabın yok mu ? Hemen kayıt ol!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>