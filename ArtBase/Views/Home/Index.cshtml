@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
    <!-- Göstergeler (Düğmeler) -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExample" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExample" data-bs-slide-to="1" aria-label="Slide 2"></button>
    </div>

    <!-- Resimlerin Olduğu Kapsayıcı -->
    <div class="carousel-inner">
        <!-- Birinci Resim -->
        <div class="carousel-item active">
            <img src="~/images/Artbase_anasayfa_1.png" class="d-block w-100" alt="Resim 1">
        </div>

        <!-- İkinci Resim -->
        <div class="carousel-item">
            <img src="~/images/Artbase_anasayfa_2.png" class="d-block w-100" alt="Resim 2">
        </div>
    </div>

    <!-- Kaydırma Kontrolleri -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Önceki</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Sonraki</span>
    </button>
</div>
